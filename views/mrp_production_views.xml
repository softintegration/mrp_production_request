<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="mrp_production_form_view_inherited" model="ir.ui.view">
            <field name="name">mrp.production.form.view.inherited</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="before">
                    <group name="mrp_production_request_ids" string="Production requests">
                        <field name="mrp_production_request_ids" attrs="{'invisible':[('mrp_production_request_ids','=',False)]}"
                               readonly="1" nolabel="1">
                            <tree js_class="lazy_column_list">
                                <field name="name" optional="show"/>
                                <field name="date_request" optional="show"/>
                                <field name="product_id" optional="show"/>
                                <field name="quantity" optional="show"/>
                                <field name="quantity_produced" optional="hide"/>
                                <field name="product_uom_id" optional="show"/>
                                <field name="date_desired" optional="hide"/>
                                <field name="origin" optional="hide"/>
                                <field name="state" decoration-bf="state == 'draft'" decoration-warning="state == 'waiting'"
                                       decoration-success="state == 'validated'" decoration-danger="state == 'cancel'"
                                       widget="badge"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="mrp_production_tree_view_inherited" model="ir.ui.view">
            <field name="name">mrp.production.tree.view.inherited</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="before">
                    <field name="mrp_production_request_ids" readonly="1" widget="many2many_tags"/>
                </xpath>
            </field>
        </record>

        <record id="view_mrp_production_filter_inherited" model="ir.ui.view">
            <field name="name">view.mrp.production.filter.inherited</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.view_mrp_production_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="before">
                    <field name="mrp_production_request_ids"/>
                </xpath>
                <xpath expr="//filter[@name='status']" position="after">
                    <filter string="Production Requests" name="mrp_production_request_ids" domain="[]" context="{'group_by': 'mrp_production_request_ids'}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
